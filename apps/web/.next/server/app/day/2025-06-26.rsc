def derive_key_from_password(password: str, salt: bytes):
"""
Derives a cryptographic key from a password using PBKDF2HMAC.
More realistic for a scenario where a key is derived from a hardcoded
value or system info, though still simplified.
"""
kdf = PBKDF2HMAC(
algorithm=hashes.SHA256(),
length=32,
salt=salt,
iterations=100000, # Higher iterations for real-world security
backend=default_backend()
)
key = base64.urlsafe_b64encode(kdf.derive(password.encode()))
return key
